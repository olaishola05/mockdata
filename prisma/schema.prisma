generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  TASK_MANAGER
  TEAM_LEAD
}

model User {
  id  String @id @default(cuid()) @map("_id")
  firstName String?
  lastName String?
  email String @unique
  password String
  confirmPassword String
  tasks Task[]
  processes Process[]
  role Role @default(USER)
  workspace String?
  token String?
  terms Boolean @default(false)
  authorization Boolean @default(false)
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Process {
  id String @id @default(cuid()) @map("_id")
  name String
  color String
  icon String?
  tasks Task[]
  user User @relation(fields: [userId], references: [id])
  userId String
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id String @id @default(cuid()) @map("_id")
  firstName String
  lastName String
  phone String
  taskId String
  description String
  assignee User @relation(fields: [assigneeId], references: [id])
  assigneeId String
  taskProcess Process @relation(fields: [taskProcessId], references: [id])
  taskProcessId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
